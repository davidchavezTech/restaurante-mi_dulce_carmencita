<div id="CreateNewUserModal" class="modal">

  <!-- Modal content -->
  <div class="custom-modal-content3">
    <h2 id='modal-title'>Crear nuevo usuario:</h2>
    <br>
    <br>
    <div class="mb-3">
		<label class="form-label">Nombre Completo</label>
		<input id='crear-nombres-input' type="input" class="form-control" placeholder="Nombres completos" style="width:235px">
	</div>
    <div class="mb-3">
		<label class="form-label">Correo electrónico</label>
		<input id='crear-email-input' type="email" class="form-control" placeholder="micorreo@ejemplo.com" style="width:235px">
